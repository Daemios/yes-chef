{
  "name": "yes-chef-server",
  "version": "1.0.0",
  "description": "Server component for Yes Chef application",  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --watch 'src/**/*.ts' --exec ts-node -r tsconfig-paths/register src/server.ts",
    "dev:full": "cd .. && npm run dev",
    "build": "prisma generate && tsc",
    "start": "node ../dist/server/server.js",
    "test": "vitest run",
    "test:watch": "vitest",
    
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:push": "prisma db push",
    "db:seed": "ts-node prisma/seed.ts",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset --force",
    "db:update": "npm run db:generate && npm run db:migrate"
  },
  "dependencies": {
    "@prisma/client": "^6.8.2",
    "cors": "^2.8.5",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^18.15.11",
    "@vitest/coverage-v8": "^0.31.0",
    "@vitest/ui": "^0.31.0",
    "nodemon": "^2.0.22",
    "prisma": "^6.8.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.4",
    "vitest": "^0.31.0"
  }
}
